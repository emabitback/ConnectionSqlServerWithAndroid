<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/ncontrol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="162dp"
            android:hint="No. de Control"
            android:inputType="number"
            android:maxLength="8" />

        <EditText
            android:id="@+id/nombre"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ncontrol"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="11dp"
            android:layout_toStartOf="@+id/apellidos"
            android:hint="Nombre" />

        <EditText
            android:id="@+id/apellidos"
            android:layout_width="207dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ncontrol"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="15dp"
            android:hint="Apellidos" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/apellidos"
            android:layout_marginTop="32dp"
            android:text="Selecciona tu semestre" />

        <Spinner
            android:id="@+id/semestre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/apellidos"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="78dp"
            android:layout_marginBottom="50dp" />
        <!--
                <EditText
                    android:id="@+id/semestre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/apellidos"
                    android:layout_marginTop="22dp"
                    android:hint="No. de Control"
                    android:inputType="number" />
        -->
        <Button
            android:id="@+id/btn_agregar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/semestre"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="162dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="161dp"
            android:text="Add" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>